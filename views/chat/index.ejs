                    <button type="button" id="image-btn" class="image-btn">
                        <i class="far fa-image"></i>
                    </button>
                    <input type="file" id="image-upload" class="image-upload" accept="image/*">
                    <button type="submit" id="send-btn" class="send-btn">Send</button>
                </form>
            </div>
